
# REACT COMPONENTS
GET           /                     controllers.HomeController.index
GET           /blog           controllers.HomeController.index
GET           /posteditor           controllers.HomeController.index
GET           /post                 controllers.HomeController.index
GET           /editor               controllers.HomeController.index


# API
GET           /post/show-all        controllers.Blog.getAllPosts
GET           /post/:id             controllers.Blog.getPost(id: String)
POST          /add                  controllers.Blog.addNewPost()
DELETE        /delete/:id           controllers.Blog.deletePost(id : String)
POST          /update/:id           controllers.Blog.updatePost(id : String)


# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file         controllers.Assets.versioned(path="/public", file: Asset)
