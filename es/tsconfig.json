{
    "compilerOptions": {
        "outDir": "./dist/",
        "lib": [
            "ES5",
            "ES2015",
            "DOM",
            "ScriptHost"],
        "sourceMap": true,
        "noEmitOnError": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react"
    },
    "include": [
        "./src/**/*"
    ]
}
